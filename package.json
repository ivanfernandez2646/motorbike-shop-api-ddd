{
  "name": "motorbike-shop-api-ddd",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/ivanfernandez2646/motorbike-shop-api-ddd"
  },
  "license": "",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.14.0"
  },
  "scripts": {
    "dev:cms:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/cms/backend/start.ts",
    "lint": "tslint src/**/*.ts{,x}",
    "test": "npm run test:unit && npm run test:integration && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "start:cms:backend": "NODE_ENV=production node dist/src/apps/cms/backend/start",
    "test:features": "npm run test:cms:backend:features",
    "test:integration": "NODE_ENV=test jest --config=./jest.config.integration.js",
    "test:cms:backend:features": "NODE_ENV=test jest --runInBand --config=./jest.config.cucumber.js",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di && npm run build:swagger",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:swagger": "copy 'docs/openapi.yml' dist",
    "build:clean": "rm -r dist; exit 0",
    "deploy": "npm run build && npx http-request-cli get https://api.render.com/deploy/srv-cf3bp19gp3jl0q3r5n90?key=fVs2358RQWo",
    "up:mongo": "docker-compose up -d mongo",
    "down:mongo": "docker-compose down --rmi local --volumes"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bodybuilder": "^2.4.0",
    "bson": "^4.5.2",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "convict": "^6.2.4",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.0",
    "express-validator": "^6.12.2",
    "glob": "^7.2.0",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "mongodb": "^4.13.0",
    "node-dependency-injection": "^2.7.1",
    "nunjucks": "^3.2.3",
    "swagger-ui-express": "^4.6.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "uuid": "^9.0.0",
    "uuid-validate": "0.0.3",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bson": "^4.0.5",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/convict": "^6.1.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.43",
    "@types/cors": "^2.8.13",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/glob": "^7.1.4",
    "@types/helmet": "0.0.48",
    "@types/jest": "^27.0.2",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^16.10.2",
    "@types/nunjucks": "^3.2.0",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.0",
    "@types/uuid-validate": "0.0.1",
    "@types/yamljs": "^0.2.31",
    "faker": "^5.5.3",
    "husky": "^4.3.8",
    "jest": "^27.2.4",
    "jest-cucumber": "^3.0.1",
    "lint-staged": "11.2.0",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "~1.18.0",
    "tslint-eslint-rules": "^5.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:unit",
      "pre-push": "npm run up:mongo && npm run test"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix"
    ]
  }
}
